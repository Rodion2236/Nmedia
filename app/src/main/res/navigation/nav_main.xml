<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nmedia.activity.fragments.FeedFragment"
        android:label="FeedFragment"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/action_feedFragment_to_newPostFragment"
            app:destination="@id/newPostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_singlePostFragment"
            app:destination="@id/singlePostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_imageViewerFragment"
            app:destination="@id/imageViewerFragment" />
        <action
            android:id="@+id/action_feedFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/feedFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_feedFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/feedFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/newPostFragment"
        android:name="ru.netology.nmedia.activity.fragments.NewPostFragment"
        android:label="NewPostFragment"
        tools:layout="@layout/fragment_new_post"/>
    <fragment
        android:id="@+id/singlePostFragment"
        android:name="ru.netology.nmedia.activity.fragments.SinglePostFragment"
        android:label="Пост"
        tools:layout="@layout/fragment_single_post">

        <action
            android:id="@+id/action_singlePostFragment_to_newPostFragment"
            app:destination="@id/newPostFragment" />

        <action
            android:id="@+id/action_singlePostFragment_to_imageViewerFragment"
            app:destination="@id/imageViewerFragment" />

        <argument
            android:name="postIdArg"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/imageViewerFragment"
        android:name="ru.netology.nmedia.activity.fragments.ImageViewerFragment"
        android:label="Image Viewer">

        <argument
            android:name="imageUrl"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.netology.nmedia.activity.fragments.LoginFragment">
        <action
            android:id="@+id/action_loginFragment_pop"
            app:popUpTo="@id/feedFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="ru.netology.nmedia.activity.fragments.RegisterFragment">
        <action
            android:id="@+id/action_registerFragment_pop"
            app:popUpTo="@id/feedFragment"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>